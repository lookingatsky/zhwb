function checkFxlx(name,size){
	var point=0;
	var obj;
         var flag = true;
	for(var i=1;i<=size;i++){
            var k=i-1;
            if(!flag){
               alert("请完成第"+k+"道题！");
               return;             }
	   obj = document.getElementsByName(name+i);
	   for(var j=0;j<obj.length;j++){
	   	if(obj[j].checked == true){
		   if(obj[j].value == 'A'){
		   	point = point+7
		   }else if(obj[j].value == 'B'){
		   	point = point+5
		   }else if(obj[j].value == 'C'){
		   	point = point+3
		   }else if(obj[j].value == 'D'){
		   	point = point+1
		   }
                      break;
                  	}
                   if(j==3){
                     flag = false;
                  }
	   }
        }
	if(point<=22){
		 document.getElementById("title").innerHTML='您的测试结果为'+point+'分,您是保守型投资者！';
		 document.getElementById("content").innerHTML='典型的风险厌恶者，在任何投资中，期望在本金不受损失的前提下获得额外收益，并且保持资产的流动性是首要目标。希望投资收益相对稳定，不愿承担高风险以换取高收益，不愿意过多承受投资波动对心理的煎熬，追求稳定。';
		 document.getElementById("lightbox1").style.display='block';
            
	}else if(point<=53 && point>=23){
